    <div class="heart">üíù</div>
    <div class="heart">üíì</div>
    <div class="heart">üíï</div>
    <div class="heart">üíó</div>
    <div class="heart">üíñ</div>
    <div class="heart">üíù</div>
    <div class="heart">üíì</div>
    <div class="heart">üíï</div>
    <div class="heart">üíó</div>

    <div class="container">
        <h1 id="title">–¢—ã –±—É–¥–µ—à—å –º–æ–µ–π –≤–∞–ª–µ–Ω—Ç–∏–Ω–∫–æ–π?</h1>
        
        <div class="button-container">
            <button id="yesBtn">–î–∞</button>
            <button id="noBtn">–ù–µ—Ç</button>
        </div>
        
        <div class="subtitle" id="subtitle">"–ù–µ—Ç" –Ω–µ–º–Ω–æ–≥–æ –±–µ—Å–∏—Ç üòà</div>
    </div>

    <script>
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const title = document.getElementById('title');
        const subtitle = document.getElementById('subtitle');
        const container = document.querySelector('.container');

        let isFinished = false;
        let noClickCount = 0;
        let noScale = 1.0;
        let yesScale = 1.0;
        let noLeftShift = 0;

        // Function to darken the No button
        function darkenNoButton(clickCount) {
            // Start from base pink color and darken with each click
            const baseLightness = 70; // Starting lightness
            const darkenAmount = 6; // Darken by 6% per click
            const newLightness = Math.max(30, baseLightness - (clickCount * darkenAmount));
            noBtn.style.transition = 'background 0.3s ease, transform 0.3s ease-out';
            noBtn.style.background = `hsl(350, 100%, ${newLightness}%)`;
        }

        // Hover effects for buttons
        noBtn.addEventListener('mouseenter', () => {
            if (!isFinished) {
                // Temporarily shrink by 5%
                const tempScale = noScale * 0.95;
                noBtn.style.transition = 'transform 0.2s ease-out';
                noBtn.style.transform = `scale(${tempScale}) translateX(${noLeftShift}px)`;
            }
        });

        noBtn.addEventListener('mouseleave', () => {
            if (!isFinished) {
                // Return to last saved size
                noBtn.style.transition = 'transform 0.2s ease-out';
                noBtn.style.transform = `scale(${noScale}) translateX(${noLeftShift}px)`;
            }
        });

        yesBtn.addEventListener('mouseenter', () => {
            if (!isFinished) {
                // Temporarily grow by 5%
                const tempScale = yesScale * 1.05;
                yesBtn.style.transition = 'transform 0.2s ease-out';
                yesBtn.style.transform = `scale(${tempScale})`;
            }
        });

        yesBtn.addEventListener('mouseleave', () => {
            if (!isFinished) {
                // Return to last saved size
                yesBtn.style.transition = 'transform 0.2s ease-out';
                yesBtn.style.transform = `scale(${yesScale})`;
            }
        });

        // No button click - shrinks by 7% and shifts left by 5px each time
        noBtn.addEventListener('click', (e) => {
            if (isFinished) return;
            
            e.preventDefault();
            noClickCount++;
            
            // Decrease No button by 7% of current size
            noScale *= 0.93;
            
            // Shift left by 5px
            noLeftShift -= 5;
            
            // Check if mouse is still hovering
            const isHovering = noBtn.matches(':hover');
            const displayScale = isHovering ? noScale * 0.95 : noScale;
            
            noBtn.style.transform = `scale(${displayScale}) translateX(${noLeftShift}px)`;
            noBtn.style.transition = 'transform 0.3s ease-out';
            
            // Darken No button with each click
            darkenNoButton(noClickCount);
            
            // Increase Yes button uniformly by 18% of CURRENT size
            yesScale *= 1.18;
            yesBtn.style.transform = `scale(${yesScale})`;
            yesBtn.style.transition = 'transform 0.3s ease-out';
            
            // Add emphasis to Yes button
            if (noClickCount >= 3) {
                yesBtn.style.background = 'var(--primary-color)';
                yesBtn.style.boxShadow = '0 15px 40px rgba(255, 77, 109, 0.4)';
            }
        });

        // Yes button click
        yesBtn.addEventListener('click', () => {
            if (isFinished) return;
            
            isFinished = true;

            // Update title
            title.textContent = '–¢–µ–ø–µ—Ä—å —Ç—ã –º–æ—è –≤–∞–ª–µ–Ω—Ç–∏–Ω–∫–∞ :)';
            
            // Update subtitle
            subtitle.textContent = '"–ù–µ—Ç" –Ω–µ–º–Ω–æ–≥–æ –±–µ—Å–∏—Ç üòàüíï';
            subtitle.classList.add('final');

            // Make buttons decorative
            yesBtn.classList.add('final');
            noBtn.classList.add('final');
            
            // Reset transforms for final state
            yesBtn.style.transform = 'scale(1)';
            noBtn.style.transform = 'scale(1) translateX(0)';
            yesBtn.style.transition = 'transform 0.5s ease-out';
            noBtn.style.transition = 'transform 0.5s ease-out';

            // Add celebration effect
            container.classList.add('celebrate');
            createConfetti();
            
            // Animate hearts - fast for 5 seconds, then slow down
            document.querySelectorAll('.heart').forEach(heart => {
                heart.style.animation = 'floatHeart 1s ease-in-out infinite';
            });
            
            // After 5 seconds, slow down the heart animation
            setTimeout(() => {
                document.querySelectorAll('.heart').forEach(heart => {
                    heart.style.animation = 'floatHeart 4s ease-in-out infinite';
                });
            }, 5000);
        });

        // Create confetti effect
        function createConfetti() {
            const colors = ['#ff4d6d', '#ff758f', '#ffe5ec', '#ffc2d1', '#ff8fab'];
            const confettiCount = 50;

            for (let i = 0; i < confettiCount; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.left = Math.random() * 100 + '%';
                confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.animationDelay = Math.random() * 0.5 + 's';
                confetti.style.animationDuration = (Math.random() * 2 + 2) + 's';
                
                document.body.appendChild(confetti);
                
                setTimeout(() => {
                    confetti.classList.add('active');
                }, 10);

                setTimeout(() => {
                    confetti.remove();
                }, 5000);
            }
        }

        // Touch device handling
        if ('ontouchstart' in window) {
            noBtn.addEventListener('touchstart', (e) => {
                if (!isFinished) {
                    // Allow normal click behavior on mobile
                }
            });
        }
    </script>
</body>
</html>
