            animation-delay: 0.6s;
            opacity: 0;
            transition: all 0.3s ease;
        }

        .subtitle.final {
            color: var(--primary-color);
            font-size: 1.1rem;
        }

        /* Final state - decorative buttons */
        button.final {
            opacity: 0.6;
            pointer-events: none;
